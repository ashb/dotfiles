#
#       Override the default locations for things that store as dotfiles,
#       where possible.

export     HISTFILE="${HOME}/var/zsh_history"          # ~/.bash_history
export LESSHISTFILE="${HOME}/var/less_history"          # ~/.lesshst
export      VIMINIT="so ${HOME}/etc/vim/vimrc"          # ~/.vim
export       TASKRC="${HOME}/etc/taskrc"                # ~/.taskrc
