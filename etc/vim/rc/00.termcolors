" -*- Mode: vim; tab-width: 4; indent-tabs-mode: nil; -*-
set bg=dark

if &term =~ "-256color"
  if (has("termguicolors"))
   set termguicolors
   set t_8f=[38;2;%lu;%lu;%lum
   set t_8b=[48;2;%lu;%lu;%lum
   set t_ut=
  else
    set t_Co=256 " enable colors on term
    let g:solarized_termcolors=256
  endif
  syntax on
elseif &term =~ "-color"
  set t_Co=8 " enable colors on term
  syntax on
end



if strlen($VIM_COLOR) > 0
  color $VIM_COLOR
elseif $ITERM_PROFILE == "Presentation"
  " If we are in the "Presentation" iterm profile then use a higher-contrast
  " color scheme.
  color default
else
  color darkside
  highlight Pmenu guibg=#446688
endif

hi SpellBad cterm=italic,undercurl ctermfg=white ctermbg=red guibg=DarkRed

" Tweak the git diff colours. They are rubish:
hi diffRemoved    ctermfg=1 ctermbg=0 guifg=#da4939
hi diffAdded      ctermfg=2 ctermbg=0 guifg=#a5c261
hi diffLine       ctermfg=4 ctermbg=0 guifg=#6d9cbe
hi diffFile       ctermfg=1 ctermbg=0 guifg=#da4939
hi link           diffOldFile diffFile
hi diffNewFile    ctermfg=2 ctermbg=0 guifg=#a5c261
