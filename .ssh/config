Host mig.sflow.us
  User aberlin
  ProxyCommand ssh -o VisualHostKey=no sherlock.scsys.co.uk nc -q0 %h %p 2>/dev/null


Host *.priv.sf
  ConnectTimeout 30
  ProxyCommand ssh -o VisualHostKey=no mig.sflow.us nc -q0 %h %p 2>/dev/null
  StrictHostKeyChecking false
  KbdInteractiveAuthentication false

Host php-apps-1.priv.sf
