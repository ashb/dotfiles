# Can't get to *.ops via the VPN, so use the bounce box
Host login.ops.saturn.sflow.us saturn.sflow.us
  Hostname saturn.sflow.us
  ControlMaster auto
  User root
  ProxyCommand ssh -o VisualHostKey=no sherlock.scsys.co.uk nc -q0 %h %p 2>/dev/null

Host *.ops.saturn.sflow.us *.dev.saturn.sflow.us
  ProxyCommand ssh -o VisualHostKey=no login.ops.saturn.sflow.us nc -q0 %h %p 2>/dev/null

# *.home etc we can use the VPN
Host *.saturn.sflow.us
  VerifyHostKeyDNS yes
  ControlMaster auto
  ProxyCommand bash -c 'connect-saturn-vpn && exec nc %h %p 2>/dev/null'


